{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn -w 1 -k uvicorn.workers.UvicornWorker --timeout 120 backend.main:app",
    "preDeployPlan": null,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  }
}
